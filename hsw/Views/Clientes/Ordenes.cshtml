            select: 'single',
            scrollX: true,
            paging: false,
            scrollCollapse: false,
            language: idioma_espanol,
            searching: false,

            columnDefs: [
                {
                    targets: 0,
                    responsivePriority: -1,
                    searchable: false,
                    orderable: false,
                    width: '1rem',
                    render: function (data, type, full, meta) {
                        let mostrar = '<div class="d-flex align-items-center">' +
                        '<a data-bs-toggle="tooltip" class="btn btn-sm btn-icon btn-text-secondary waves-effect waves-light rounded-pill" data-bs-placement="top" title="Trazabilidad Orden"><i class="ri-line-chart-fill"  style="color:green" data-opc="tra"></i></a>' +
                        '</div>'
                        return (mostrar);
                    }
                },
                { width: "4rem", targets: 1, visible: false },
                { width: "13rem", targets: 2 },
                { width: "5rem", targets: 3 },
                {
                    width: "6rem", targets: [4,7,8] , className: "text-center",
                    render: function (data, type, row) {
                        let fechaMostrar = moment(data).format('DD/MM/YYYY');
                        if (type === 'sort' || type === 'type') {
                            return data;
                        } else {
                            return fechaMostrar;
                        }
                    }
                },
                { width: "6rem", targets: 5, className: "text-end", render: $.fn.dataTable.render.number(',', '.', 0) },
                { width: "30rem", targets: 6 },
                { width: "10rem", targets: 9 },
                { width: "10rem", targets: 10 }
            ]

        });

        var tabladet = $('#tabladet').DataTable({
            data: matrizdet,
            compact: true,
            order: [1, 'asc'],
            //scrollY: 'calc(100vh - 300px)',
            scrollY: 'calc(20vh)',
            scrollX: true,
            paging: false,
            scrollCollapse: false,
            language: idioma_espanol,
            searching: false,
            columnDefs: [
                { width: "4rem", targets: 0 },
                { width: "2rem", targets: 1, className: "text-end" },
                { width: "50rem", targets: 2 },
                { width: "5rem", targets: 3 },
                { width: "5rem", targets: 3, className: "text-end", render: $.fn.dataTable.render.number(',', '.', 0) }
            ]
        });

        mostrarBloqueo('#lista-lst');

        get("/Clientes/OrdenesCSV/?data=lst", mostrarLista);

        function mostrarLista(rpta) {
            matriz = [];
            if (rpta != "") {
                var listas = rpta.split("¯");
                lista = rpta.split("¬");
                crearMatriz();
            }
            mostrarMatriz();
        }
        function crearMatriz() {
            matriz = [];
            var campos = [];
            var nRegistros = lista.length;
            var fila = [];
            var i = 0;
            campos = lista[0].split("|");
            for (i; i < nRegistros; i++) {
                campos = lista[i].split("|");
                nCampos = campos.length;
                fila = [];
                for (var j = 0; j < nCampos; j++) {
                    fila.push(campos[j]);
                }
                matriz.push(fila);
            }
        }
        function mostrarMatriz() {
            tabla = $('#tabla').DataTable().clear().rows.add(matriz).draw();

            tabla.on('select', function (e, dt, type, indexes) {
                if (type === 'row') {
                    var dataFila = tabla.rows(indexes).data().toArray();
                    get("/Clientes/OrdenesCSV/?data=ord|" + dataFila[0][1] + "|" + dataFila[0][3] , mostrarListaDet);
                    // Aquí puedes trabajar con los datos de la fila seleccionada (dataFila)
                }
            });

            tabla.on('deselect', function (e, dt, type, indexes) {
                if (type === 'row') {
                    matriz = [];
                    mostrarMatrizDet();
                }
            });

            ajustarHeadersDataTables($('#tabla'));
            ocultarBloqueo('#lista-lst');
        }

        function mostrarListaDet(rpta) {
            matriz = [];
            if (rpta != "") {
                var listas = rpta.split("¯");
                lista = rpta.split("¬");
                crearMatrizDet();
            }
            mostrarMatrizDet();
        }
        function crearMatrizDet() {
            matriz = [];
            var campos = [];
            var nRegistros = lista.length;
            var fila = [];
            var i = 0;
            campos = lista[0].split("|");
            for (i; i < nRegistros; i++) {
                campos = lista[i].split("|");
                nCampos = campos.length;
                fila = [];
                for (var j = 0; j < nCampos; j++) {
                    fila.push(campos[j]);
                }
                matriz.push(fila);
            }
        }
        function mostrarMatrizDet() {
            tabladet = $('#tabladet').DataTable().clear().rows.add(matriz).draw();
            ajustarHeadersDataTables($('#tabladet'));
        }

    </script>

