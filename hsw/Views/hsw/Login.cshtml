    -->

    <!-- Main JS -->
    <script src="~/assets/js/main.js"></script>

    <!-- Page JS -->
    <script src="~/scripts/hsw/Principal.js?v=1.001"></script>
    <script src="~/scripts/hsw/Login.js?v=1.003"></script>


</body>
</html>
