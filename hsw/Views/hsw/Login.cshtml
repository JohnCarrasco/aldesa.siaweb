@{
    Layout = null;
    ViewData["Title"] = "SIAWEB - Almacenes de Depósito";
}

<style>
    .authentication-wrapper .auth-cover-illustration {
        z-index: 1;
        max-inline-size: 100rem !important;
    }
</style>

<!doctype html>
