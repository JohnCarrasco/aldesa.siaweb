 <!-- Content -->
<!-- Invoice List Table -->
<div class="card" id="card-rce">
@*     <h5 class="card-header bg-primary text-white">Registro de Compras Electrónico</h5> *@
    <h5 class="card-header">Registro de Compras Electrónico</h5>
    <div class="card-body">

        <div class="container">
            <div class="row">
                <div class="col s12 m4">
                    <div class="form-floating form-floating-outline mb-4">
                        <select class="form-select" tabindex="0" id="cboPeriodos"></select>
                        <label for="cboPeriodos">Periodo *</label>
                        <div class="invalid-feedback text-start">Por favor seleccione un periodo</div>
                    </div>
                </div>
                <div class="col s12 m8">
                    <button class="btn btn-block btn-primary" type="button" id="btnConsultar" disabled>Consultar</button>
                    <button class="btn btn-block btn-primary" type="button" id="btnSolicitar" disabled>Solicitar Propuesta</button>
                    <button class="btn btn-block btn-primary" type="button" id="btnDescargar" disabled>Descargar Propuesta</button>
                </div>
            </div>
        </div>

        <div class="card-datatable table-responsive text-nowrap">
            <table id="tabla" class="dt-scrollableTable table table-bordered table-striped table-hover table-sm">
                <thead>
                    <tr>
                        <th class="text-center">Acciones</th>
                        <th class="text-center">Comp</th>
                        <th class="text-center">T/D</th>
                        <th class="text-center">Nro.Domto</th>
                        <th class="text-center">Fecha</th>
                        <th class="text-center">RUC</th>
                        <th class="text-center">Apellidos Nombres/Razón Social</th>
                        <th class="text-center">BI Gravado<br />DG</th>
                        <th class="text-center">IGV<br />DG</th>
                        <th class="text-center">BI Gravado<br />DGNG</th>
                        <th class="text-center">IGV<br />DGNG</th>
                        <th class="text-center">BI Gravado<br />DNG</th>
                        <th class="text-center">IGV<br />DNG</th>
                        <th class="text-center">Valor Adq.<br />NG</th>
                        <th class="text-center">ISC</th>
                        <th class="text-center">ICBPER</th>
                        <th class="text-center">Otros<br />Trib/Cargos</th>
                        <th class="text-center">Total<br />CP</th>
                        <th class="text-center">T/M</th>
                        <th class="text-center">T/C</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<!-- /.modal -->
